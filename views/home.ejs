

<%- include("partials/header") %>

<form  action="/form2" method="post">
  <button class="btn btn-primary" type="submit" name="button">Compose</button>
</form>

<h1>home</h1>
<p><%= startingContent %></p>


<% for(var i=0;i<posts.length;i++){ %>
  <h1> <%=posts[i].fetchArticleTitle%> </h1>
  <% if(posts[i].fetchArticleContent.length<=80){ %>
    <p><%=posts[i].fetchArticleContent%></p>
  <% } else{ %>
    <% var str=posts[i].fetchArticleContent.substr(0,80)+"......" %>
    <p> <%= str %> <a href="/posts/<%=posts[i].fetchArticleTitle%>">Read more</a> </p>
  <% } %>
<% } %>






